---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  category: string;
  image: string;
  slug: string;
  tags?: string[];
}

const { title, description, publishDate, category, image, slug, tags } = Astro.props;

// Calculate reading time (approximate)
const readingTime = Math.ceil(description.length / 100) + 3;
---

<article class="group bg-[var(--color-bg-secondary)] rounded-xl overflow-hidden hover:shadow-xl hover:shadow-[var(--color-accent)]/10 transition-all duration-300 hover:-translate-y-1">
  <a href={`/blog/${slug}`} class="block">
    <!-- Image -->
    <div class="relative h-48 overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
      <div class="absolute top-4 left-4">
        <span class="px-3 py-1 bg-[var(--color-accent)] text-[var(--color-bg)] rounded-full text-xs font-medium">
          {category}
        </span>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <div class="flex items-center gap-4 text-xs text-[var(--color-text-muted)] mb-3">
        <time datetime={publishDate.toISOString()}>
          {publishDate.toLocaleDateString('fr-FR', { 
            year: 'numeric', 
            month: 'short', 
            day: 'numeric' 
          })}
        </time>
        <span>â€¢</span>
        <span>{readingTime} min de lecture</span>
      </div>

      <h3 class="text-xl font-bold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-accent)] transition-colors line-clamp-2">
        {title}
      </h3>

      <p class="text-[var(--color-text-muted)] text-sm line-clamp-3 mb-4">
        {description}
      </p>

      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.slice(0, 3).map((tag) => (
            <span class="px-2 py-1 bg-[var(--color-bg)] text-[var(--color-text-muted)] rounded text-xs">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
