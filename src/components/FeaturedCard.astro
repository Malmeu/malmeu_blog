---
interface Props {
  title: string;
  description: string;
  slug: string;
  image: string;
  category: string;
  publishDate: Date;
  readingTime: number;
}

const { title, description, slug, image, category, publishDate, readingTime } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('fr-DZ', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  }).format(date);
};
---

<article class="group relative overflow-hidden rounded-2xl bg-[var(--color-bg-secondary)] hover:shadow-2xl hover:shadow-[var(--color-accent)]/20 transition-all duration-500 hover:-translate-y-2">
  <!-- Badge Featured -->
  <div class="absolute top-4 left-4 z-10">
    <span class="px-3 py-1 bg-gradient-to-r from-[var(--color-accent)] to-[var(--color-accent-orange)] text-white text-xs font-bold rounded-full uppercase tracking-wider">
      ⭐ En vedette
    </span>
  </div>
  
  <!-- Image -->
  <div class="relative h-48 overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-bg-secondary)]/80 to-transparent"></div>
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <!-- Meta -->
    <div class="flex items-center gap-4 text-xs text-[var(--color-text-muted)] mb-3">
      <span class="px-2 py-1 bg-[var(--color-accent)]/20 text-[var(--color-accent)] rounded-md font-medium">
        {category}
      </span>
      <span>{formatDate(publishDate)}</span>
      <span>•</span>
      <span>{readingTime} min de lecture</span>
    </div>
    
    <!-- Title -->
    <h3 class="text-xl font-bold text-[var(--color-text)] mb-3 line-clamp-2 group-hover:text-[var(--color-accent)] transition-colors">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="text-[var(--color-text-muted)] mb-4 line-clamp-3 leading-relaxed">
      {description}
    </p>
    
    <!-- Read more -->
    <a 
      href={`/blog/${slug}`}
      class="inline-flex items-center gap-2 text-[var(--color-accent)] font-medium hover:text-[var(--color-accent-orange)] transition-colors group"
    >
      Lire l'article
      <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
