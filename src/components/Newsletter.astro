---
interface Props {
  variant?: 'inline' | 'card';
}

const { variant = 'card' } = Astro.props;
---

{variant === 'card' ? (
  <section class="mt-16 p-8 rounded-2xl bg-gradient-to-br from-[var(--color-accent)]/10 to-[var(--color-accent-orange)]/10 border border-[var(--color-accent)]/20">
    <div class="text-center max-w-xl mx-auto">
      <h2 class="text-2xl font-bold mb-2 text-[var(--color-text)]">
        Restez informé
      </h2>
      <p class="text-[var(--color-text-muted)] mb-6">
        Recevez mes derniers articles sur le SaaS, l'IA et le développement en Algérie. Pas de spam, promis.
      </p>
      <form id="newsletter-form" class="flex flex-col sm:flex-row gap-3">
        <input
          type="email"
          name="email"
          placeholder="votre@email.com"
          required
          class="flex-1 px-4 py-3 rounded-xl bg-[var(--color-bg)] border border-[var(--color-bg-secondary)] text-[var(--color-text)] placeholder:text-[var(--color-text-muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors"
        />
        <button
          type="submit"
          class="px-6 py-3 rounded-xl bg-[var(--color-accent)] text-[var(--color-bg)] font-semibold hover:opacity-90 transition-opacity whitespace-nowrap"
        >
          S'abonner
        </button>
      </form>
      <p id="newsletter-message" class="mt-4 text-sm hidden"></p>
    </div>
  </section>
) : (
  <form id="newsletter-form-inline" class="flex flex-col sm:flex-row gap-2">
    <input
      type="email"
      name="email"
      placeholder="votre@email.com"
      required
      class="flex-1 px-3 py-2 rounded-lg bg-[var(--color-bg-secondary)] border border-[var(--color-bg-tertiary)] text-[var(--color-text)] placeholder:text-[var(--color-text-muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors text-sm"
    />
    <button
      type="submit"
      class="px-4 py-2 rounded-lg bg-[var(--color-accent)] text-[var(--color-bg)] font-medium hover:opacity-90 transition-opacity text-sm"
    >
      S'abonner
    </button>
  </form>
)}

<script>
  const forms = document.querySelectorAll('#newsletter-form, #newsletter-form-inline');
  
  forms.forEach(form => {
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form as HTMLFormElement);
      const email = formData.get('email');
      const messageEl = document.getElementById('newsletter-message');
      
      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });
        
        if (response.ok) {
          if (messageEl) {
            messageEl.textContent = '✅ Merci ! Vous êtes inscrit.';
            messageEl.className = 'mt-4 text-sm text-green-500';
            messageEl.classList.remove('hidden');
          }
          (form as HTMLFormElement).reset();
        } else {
          throw new Error('Erreur');
        }
      } catch {
        if (messageEl) {
          messageEl.textContent = '❌ Une erreur est survenue. Réessayez.';
          messageEl.className = 'mt-4 text-sm text-red-500';
          messageEl.classList.remove('hidden');
        }
      }
    });
  });
</script>
