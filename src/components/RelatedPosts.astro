---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

interface Props {
  currentSlug: string;
  currentTags: string[];
  currentCategory: string;
  limit?: number;
}

const { currentSlug, currentTags, currentCategory, limit = 3 } = Astro.props;

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

// Score posts by relevance
const scoredPosts = allPosts
  .filter(post => post.slug !== currentSlug)
  .map(post => {
    let score = 0;
    
    // Same category = +3 points
    if (post.data.category === currentCategory) score += 3;
    
    // Each matching tag = +2 points
    const matchingTags = post.data.tags?.filter(tag => currentTags.includes(tag)) || [];
    score += matchingTags.length * 2;
    
    return { post, score };
  })
  .filter(({ score }) => score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, limit);

const relatedPosts = scoredPosts.map(({ post }) => post);
---

{relatedPosts.length > 0 && (
  <section class="mt-16 pt-8 border-t border-[var(--color-bg-secondary)]">
    <h2 class="text-2xl font-bold mb-6 text-[var(--color-text)]">Articles similaires</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {relatedPosts.map((post) => (
        <a 
          href={`/blog/${post.slug}`}
          class="group block p-4 rounded-xl bg-[var(--color-bg-secondary)] hover:bg-[var(--color-bg-tertiary)] transition-colors"
        >
          {post.data.image && (
            <img 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-32 object-cover rounded-lg mb-3"
            />
          )}
          <span class="text-xs text-[var(--color-accent)] font-medium">
            {post.data.category}
          </span>
          <h3 class="font-semibold text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors line-clamp-2 mt-1">
            {post.data.title}
          </h3>
          <p class="text-sm text-[var(--color-text-muted)] mt-2 line-clamp-2">
            {post.data.description}
          </p>
        </a>
      ))}
    </div>
  </section>
)}
