---
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '../components/TableOfContents.astro';
import Comments from '../components/Comments.astro';
import ShareButtons from '../components/ShareButtons.astro';
import RelatedPosts from '../components/RelatedPosts.astro';
import Newsletter from '../components/Newsletter.astro';
import PostReactions from '../components/PostReactions.astro';
import type { CollectionEntry } from 'astro:content';
import Analytics from '@vercel/analytics/astro'

const currentUrl = Astro.url.href;

interface Props {
  post: CollectionEntry<'blog'>;
  headings: { depth: number; slug: string; text: string }[];
  prevPost?: CollectionEntry<'blog'>;
  nextPost?: CollectionEntry<'blog'>;
}

const { post, headings, prevPost, nextPost } = Astro.props;
const { title, description, publishDate, category, tags, image, sponsored, sponsorName, sponsorUrl, sponsorLogo, author, authorImage, authorBio } = post.data;

// Calculate reading time
const content = post.body || '';
const wordsPerMinute = 200;
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / wordsPerMinute);
---

<BaseLayout 
  title={`${title} | Blog`}
  description={description}
  image={image}
  type="article"
  publishDate={publishDate}
  tags={tags}
  category={category}
  readingTime={readingTime}
  wordCount={wordCount}
>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <!-- Breadcrumbs -->
    <nav class="mb-8 text-sm" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2 text-[var(--color-text-muted)]" itemscope itemtype="https://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item" class="hover:text-[var(--color-accent)] transition-colors">
            <span itemprop="name">Accueil</span>
          </a>
          <meta itemprop="position" content="1" />
        </li>
        <li class="text-[var(--color-text-muted)]">/</li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/blog" itemprop="item" class="hover:text-[var(--color-accent)] transition-colors">
            <span itemprop="name">Blog</span>
          </a>
          <meta itemprop="position" content="2" />
        </li>
        <li class="text-[var(--color-text-muted)]">/</li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name" class="text-[var(--color-accent)]">{title}</span>
          <meta itemprop="position" content="3" />
        </li>
      </ol>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <div class="flex items-center gap-4 mb-4 flex-wrap">
        {sponsored && (
          <span class="px-3 py-1 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-full text-sm font-medium">
            üí∞ Sponsoris√©
          </span>
        )}
        <a 
          href={`/blog/category/${category.toLowerCase()}`}
          class="px-3 py-1 bg-[var(--color-accent)] text-[var(--color-bg)] rounded-full text-sm font-medium hover:opacity-90 transition-opacity"
        >
          {category}
        </a>
        <span class="text-[var(--color-text-muted)] text-sm">
          {readingTime} min de lecture
        </span>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-[var(--color-text)]">
        {title}
      </h1>
      
      <p class="text-xl text-[var(--color-text-muted)] mb-6">
        {description}
      </p>
      
      <div class="flex items-center justify-between flex-wrap gap-4">
        <!-- Auteur -->
        <div class="flex items-center gap-3">
          {authorImage ? (
            <img src={authorImage} alt={author} class="w-10 h-10 rounded-full object-cover" />
          ) : (
            <div class="w-10 h-10 rounded-full bg-[var(--color-accent)] flex items-center justify-center text-[var(--color-bg)] font-bold">
              {author?.charAt(0) || 'M'}
            </div>
          )}
          <div>
            <span class="text-sm font-medium text-[var(--color-text)]">{author || 'Malmeu'}</span>
            <time datetime={publishDate.toISOString()} class="block text-xs text-[var(--color-text-muted)]">
              {publishDate.toLocaleDateString('fr-FR', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
        </div>
        <ShareButtons title={title} url={currentUrl} />
      </div>
      
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag: string) => (
            <span class="px-2 py-1 bg-[var(--color-bg-secondary)] text-[var(--color-text-muted)] rounded text-xs">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Sponsor Banner -->
    {sponsored && sponsorName && (
      <div class="mb-8 p-4 bg-gradient-to-r from-amber-500/10 to-orange-500/10 border border-amber-500/30 rounded-xl">
        <div class="flex items-center gap-4">
          {sponsorLogo && (
            <img src={sponsorLogo} alt={sponsorName} class="h-10 w-auto" />
          )}
          <div class="flex-1">
            <p class="text-sm text-[var(--color-text-muted)]">
              Cet article est sponsoris√© par 
              {sponsorUrl ? (
                <a href={sponsorUrl} target="_blank" rel="noopener sponsored" class="font-semibold text-amber-500 hover:text-amber-400 transition-colors">
                  {sponsorName}
                </a>
              ) : (
                <span class="font-semibold text-amber-500">{sponsorName}</span>
              )}
            </p>
          </div>
        </div>
      </div>
    )}

    <!-- Cover Image -->
    {image && (
      <img 
        src={image} 
        alt={title}
        class="w-full h-64 md:h-96 object-cover rounded-xl mb-12"
      />
    )}

    <!-- Content with TOC -->
    <div class="lg:grid lg:grid-cols-[1fr_250px] lg:gap-12">
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
      
      {headings.length > 0 && (
        <aside class="hidden lg:block">
          <div class="sticky top-24">
            <TableOfContents headings={headings} />
          </div>
        </aside>
      )}
    </div>

    <!-- Reactions -->
    <div class="mt-12 pt-8 border-t border-[var(--color-bg-secondary)]">
      <PostReactions slug={post.slug} />
    </div>

    <!-- Related Posts -->
    <RelatedPosts 
      currentSlug={post.slug} 
      currentTags={tags || []} 
      currentCategory={category} 
    />

    <!-- Newsletter -->
    <Newsletter />

    <!-- Navigation -->
    <nav class="mt-16 pt-8 border-t border-[var(--color-bg-secondary)]">
      <div class="flex justify-between items-center">
        {prevPost ? (
          <a 
            href={`/blog/${prevPost.slug}`}
            class="group flex flex-col items-start max-w-[45%]"
          >
            <span class="text-sm text-[var(--color-text-muted)] mb-1">‚Üê Article pr√©c√©dent</span>
            <span class="text-[var(--color-accent)] group-hover:text-[var(--color-accent-orange)] transition-colors font-medium truncate w-full">
              {prevPost.data.title}
            </span>
          </a>
        ) : <div />}
        
        {nextPost ? (
          <a 
            href={`/blog/${nextPost.slug}`}
            class="group flex flex-col items-end max-w-[45%]"
          >
            <span class="text-sm text-[var(--color-text-muted)] mb-1">Article suivant ‚Üí</span>
            <span class="text-[var(--color-accent)] group-hover:text-[var(--color-accent-orange)] transition-colors font-medium truncate w-full text-right">
              {nextPost.data.title}
            </span>
          </a>
        ) : <div />}
      </div>
    </nav>
  </article>
  
  <!-- Comments Section -->
  <Comments slug={post.slug} title={post.data.title} />
  <Analytics />
</BaseLayout>
