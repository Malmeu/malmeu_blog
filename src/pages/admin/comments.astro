---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase, type Comment } from '../../lib/supabase';

// Check authentication
const cookies = Astro.cookies;
const isLoggedIn = cookies.get('admin_session')?.value === 'authenticated';

console.log('Admin page accessed - isLoggedIn:', isLoggedIn);

if (!isLoggedIn) {
  console.log('Not authenticated, redirecting to login');
  return Astro.redirect('/admin/login');
}

// Fetch all comments (pending and approved)
let comments: Comment[] = [];
if (supabase) {
  const { data: allComments, error } = await supabase
    .from('comments')
    .select('*')
    .order('created_at', { ascending: false });
  
  comments = allComments || [];
} else {
  console.log('Supabase not configured - admin disabled');
}

// Count by status
const pendingCount = comments.filter(c => c.status === 'pending').length;
const approvedCount = comments.filter(c => c.status === 'approved').length;
const rejectedCount = comments.filter(c => c.status === 'rejected').length;
---

<BaseLayout 
  title="Administration des commentaires"
  description="Mod√©rez les commentaires du blog"
  noIndex={true}
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header -->
    <header class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-4xl font-bold text-[var(--color-text)]">
          üõ°Ô∏è Administration des commentaires
        </h1>
        <button 
          id="logout-btn"
          class="px-4 py-2 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition-colors"
        >
          üö™ D√©connexion
        </button>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-yellow-500/10 border border-yellow-500/20 rounded-lg p-4">
          <h3 class="text-yellow-400 font-semibold mb-2">‚è≥ En attente</h3>
          <p class="text-2xl font-bold text-[var(--color-text)]">{pendingCount}</p>
        </div>
        <div class="bg-green-500/10 border border-green-500/20 rounded-lg p-4">
          <h3 class="text-green-400 font-semibold mb-2">‚úÖ Approuv√©s</h3>
          <p class="text-2xl font-bold text-[var(--color-text)]">{approvedCount}</p>
        </div>
        <div class="bg-red-500/10 border border-red-500/20 rounded-lg p-4">
          <h3 class="text-red-400 font-semibold mb-2">‚ùå Rejet√©s</h3>
          <p class="text-2xl font-bold text-[var(--color-text)]">{rejectedCount}</p>
        </div>
      </div>
    </header>

    <!-- Comments List -->
    <div class="space-y-6">
      {supabase ? (
        comments.length > 0 ? (
        comments.map((comment) => (
          <div class={`bg-[var(--color-bg-secondary)] rounded-xl p-6 border-l-4 ${
            comment.status === 'pending' ? 'border-l-yellow-500' :
            comment.status === 'approved' ? 'border-l-green-500' :
            'border-l-red-500'
          }`}>
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-[var(--color-accent)] to-[var(--color-accent-orange)] rounded-full flex items-center justify-center">
                    <span class="text-white font-bold text-sm">{comment.name.substring(0, 2).toUpperCase()}</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-[var(--color-text)]">{comment.name}</h4>
                    <div class="flex items-center gap-2 text-sm text-[var(--color-text-muted)]">
                      <span>{comment.email}</span>
                      <span>‚Ä¢</span>
                      <span>{new Date(comment.created_at).toLocaleDateString('fr-DZ')}</span>
                      <span>‚Ä¢</span>
                      <a href={`/blog/${comment.article_slug}`} class="text-[var(--color-accent)] hover:underline">
                        {comment.article_title}
                      </a>
                    </div>
                  </div>
                </div>
                
                <div class="bg-[var(--color-bg)] rounded-lg p-4 mb-4">
                  <p class="text-[var(--color-text)] leading-relaxed whitespace-pre-wrap">{comment.content}</p>
                </div>
                
                <div class="flex items-center gap-2">
                  <span class={`px-2 py-1 rounded-md text-xs font-medium ${
                    comment.status === 'pending' ? 'bg-yellow-500/20 text-yellow-400' :
                    comment.status === 'approved' ? 'bg-green-500/20 text-green-400' :
                    'bg-red-500/20 text-red-400'
                  }`}>
                    {comment.status === 'pending' ? 'En attente' :
                     comment.status === 'approved' ? 'Approuv√©' : 'Rejet√©'}
                  </span>
                </div>
              </div>
              
              {comment.status === 'pending' && (
                <div class="flex flex-col gap-2">
                  <button 
                    onclick={`approveComment('${comment.id}')`}
                    class="px-4 py-2 bg-green-500 text-white rounded-lg font-medium hover:bg-green-600 transition-colors"
                  >
                    ‚úÖ Approuver
                  </button>
                  <button 
                    onclick={`rejectComment('${comment.id}')`}
                    class="px-4 py-2 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition-colors"
                  >
                    ‚ùå Rejeter
                  </button>
                </div>
              )}
              
              {comment.status !== 'pending' && (
                <div class="flex flex-col gap-2">
                  {comment.status === 'approved' && (
                    <button 
                      onclick={`rejectComment('${comment.id}')`}
                      class="px-4 py-2 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition-colors"
                    >
                      ‚ùå Rejeter
                    </button>
                  )}
                  {comment.status === 'rejected' && (
                    <button 
                      onclick={`approveComment('${comment.id}')`}
                      class="px-4 py-2 bg-green-500 text-white rounded-lg font-medium hover:bg-green-600 transition-colors"
                    >
                      ‚úÖ Approuver
                    </button>
                  )}
                </div>
              )}
            </div>
          </div>
        ))
        ) : (
          <div class="text-center py-12 bg-[var(--color-bg-secondary)] rounded-xl">
            <p class="text-[var(--color-text-muted)]">Aucun commentaire pour le moment.</p>
          </div>
        )
      ) : (
        <div class="text-center py-12 bg-[var(--color-bg-secondary)] rounded-xl">
          <p class="text-[var(--color-text-muted)]">üîß Supabase n'est pas configur√©.</p>
          <p class="text-sm text-[var(--color-text-muted)] mt-2">Configurez les variables d'environnement pour activer la mod√©ration.</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>

<script type="module">
  import { createClient } from 'https://cdn.skypack.dev/@supabase/supabase-js';
  
  // Supabase configuration
  const supabaseUrl = 'https://pzyyjsljzcnmbovbftmh.supabase.co';
  const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InB6eXlqc2xqemNubWJvdmJmdG1oIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjUyMjU4NjMsImV4cCI6MjA4MDgwMTg2M30.xq5pjLruOTEGBQ7Pr12C5X4iyHkCYCwH6HNwfYUCswk';
  
  const supabase = createClient(supabaseUrl, supabaseAnonKey);
  
  console.log('Supabase admin initialized');
  
  // Approve comment
  window.approveComment = async (commentId) => {
    try {
      console.log('Approving comment:', commentId);
      const { error } = await supabase
        .from('comments')
        .update({ status: 'approved' })
        .eq('id', commentId);
      
      if (error) {
        console.error('Supabase error:', error);
        throw error;
      }
      
      console.log('Comment approved successfully');
      // Reload page to show updated status
      window.location.reload();
    } catch (error) {
      console.error('Error approving comment:', error);
      alert('Erreur lors de l\'approbation du commentaire.');
    }
  };
  
  // Reject comment
  window.rejectComment = async (commentId) => {
    try {
      console.log('Rejecting comment:', commentId);
      const { error } = await supabase
        .from('comments')
        .update({ status: 'rejected' })
        .eq('id', commentId);
      
      if (error) {
        console.error('Supabase error:', error);
        throw error;
      }
      
      console.log('Comment rejected successfully');
      // Reload page to show updated status
      window.location.reload();
    } catch (error) {
      console.error('Error rejecting comment:', error);
      alert('Erreur lors du rejet du commentaire.');
    }
  };

  // Logout functionality
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', function() {
      // Clear the session cookie
      document.cookie = 'admin_session=; path=/; expires=Thu, 01 Jan 1970 00:00:00 UTC';
      
      // Redirect to login page
      window.location.href = '/admin/login';
    });
  }
</script>
