---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout title="Nouvel Article - Admin" description="Cr√©er un nouvel article" noIndex={true}>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-8 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a href="/admin/articles" class="text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors">
          ‚Üê Retour
        </a>
        <h1 class="text-2xl font-bold text-[var(--color-text)]">‚ú® Nouvel Article</h1>
      </div>
      <div class="flex items-center gap-3">
        <button id="save-draft-btn" class="px-4 py-2 bg-yellow-500/20 text-yellow-400 rounded-lg hover:bg-yellow-500/30 transition-colors">
          üìù Brouillon
        </button>
        <button id="publish-btn" class="px-5 py-2 bg-[var(--color-accent)] text-[var(--color-bg)] rounded-lg font-medium hover:opacity-90 transition-opacity">
          üöÄ Publier
        </button>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Editor -->
      <div class="space-y-6">
        <!-- Title & Description -->
        <div class="bg-[var(--color-bg-secondary)] rounded-xl p-6">
          <input 
            type="text" 
            id="title"
            class="w-full bg-transparent text-2xl font-bold text-[var(--color-text)] placeholder-gray-600 border-b border-[var(--color-bg)] pb-2 mb-4 focus:border-[var(--color-accent)] focus:outline-none"
            placeholder="Titre de l'article..."
          />
          <textarea 
            id="description"
            rows="2"
            class="w-full bg-transparent text-[var(--color-text-muted)] placeholder-gray-600 resize-none focus:outline-none"
            placeholder="Description courte..."
          ></textarea>
        </div>

        <!-- Metadata -->
        <div class="bg-[var(--color-bg-secondary)] rounded-xl p-6">
          <h2 class="font-semibold text-[var(--color-text)] mb-4">‚öôÔ∏è Param√®tres</h2>
          
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <label class="block text-xs text-[var(--color-text-muted)] uppercase mb-1">Cat√©gorie</label>
              <input type="text" id="category" class="w-full px-3 py-2 bg-[var(--color-bg)] rounded-lg text-[var(--color-text)] placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)]" placeholder="Tech" />
            </div>
            <div>
              <label class="block text-xs text-[var(--color-text-muted)] uppercase mb-1">Tags</label>
              <input type="text" id="tags" class="w-full px-3 py-2 bg-[var(--color-bg)] rounded-lg text-[var(--color-text)] placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)]" placeholder="react, js" />
            </div>
          </div>
          
          <div class="mb-4">
            <label class="block text-xs text-[var(--color-text-muted)] uppercase mb-1">Image</label>
            <input type="text" id="image" class="w-full px-3 py-2 bg-[var(--color-bg)] rounded-lg text-[var(--color-text)] placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)]" placeholder="https://..." />
          </div>
          
          <div class="flex items-center gap-6 pt-4 border-t border-[var(--color-bg)]">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" id="featured" class="w-4 h-4 accent-[var(--color-accent)]" />
              <span class="text-sm text-[var(--color-text-muted)]">‚≠ê En vedette</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" id="sponsored" class="w-4 h-4 accent-amber-500" />
              <span class="text-sm text-amber-400">üí∞ Sponsoris√©</span>
            </label>
          </div>
          
          <div id="sponsor-fields" class="hidden mt-4 pt-4 border-t border-[var(--color-bg)] grid grid-cols-2 gap-4">
            <input type="text" id="sponsorName" class="px-3 py-2 bg-[var(--color-bg)] rounded-lg text-[var(--color-text)] placeholder-gray-600 focus:outline-none" placeholder="Nom sponsor" />
            <input type="url" id="sponsorUrl" class="px-3 py-2 bg-[var(--color-bg)] rounded-lg text-[var(--color-text)] placeholder-gray-600 focus:outline-none" placeholder="URL sponsor" />
          </div>
        </div>

        <!-- Editor -->
        <div class="bg-[var(--color-bg-secondary)] rounded-xl overflow-hidden">
          <div class="flex items-center gap-1 px-4 py-2 border-b border-[var(--color-bg)] bg-[var(--color-bg)]/50">
            <button onclick="insertMd('## ', '')" class="px-2 py-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">H2</button>
            <button onclick="insertMd('**', '**')" class="px-2 py-1 text-sm font-bold text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">B</button>
            <button onclick="insertMd('*', '*')" class="px-2 py-1 text-sm italic text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">I</button>
            <button onclick="insertMd('[', '](url)')" class="px-2 py-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">üîó</button>
            <button onclick="insertMd('`', '`')" class="px-2 py-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">`</button>
            <button onclick="insertMd('\n```\n', '\n```')" class="px-2 py-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 rounded">```</button>
          </div>
          <textarea 
            id="body"
            class="w-full px-4 py-4 bg-transparent text-[var(--color-text)] font-mono text-sm min-h-[400px] resize-none focus:outline-none"
            placeholder="√âcrivez en Markdown..."
          ></textarea>
        </div>
      </div>

      <!-- Preview -->
      <div class="hidden lg:block">
        <div class="bg-[var(--color-bg-secondary)] rounded-xl overflow-hidden sticky top-24">
          <div class="px-4 py-2 border-b border-[var(--color-bg)] text-sm text-[var(--color-text-muted)]">
            üëÅÔ∏è Pr√©visualisation
          </div>
          <div id="preview" class="p-6 prose prose-invert max-w-none max-h-[600px] overflow-y-auto">
            <p class="text-gray-500 italic">La pr√©visualisation appara√Ætra ici...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
  // Auth
  const session = localStorage.getItem('admin_session');
  const expiry = localStorage.getItem('admin_session_expiry');
  if (!(session === 'authenticated' && expiry && Date.now() < parseInt(expiry))) {
    window.location.href = '/admin/login';
  }

  const titleEl = document.getElementById('title') as HTMLInputElement;
  const descriptionEl = document.getElementById('description') as HTMLTextAreaElement;
  const categoryEl = document.getElementById('category') as HTMLInputElement;
  const tagsEl = document.getElementById('tags') as HTMLInputElement;
  const imageEl = document.getElementById('image') as HTMLInputElement;
  const featuredEl = document.getElementById('featured') as HTMLInputElement;
  const sponsoredEl = document.getElementById('sponsored') as HTMLInputElement;
  const sponsorFields = document.getElementById('sponsor-fields') as HTMLElement;
  const sponsorNameEl = document.getElementById('sponsorName') as HTMLInputElement;
  const sponsorUrlEl = document.getElementById('sponsorUrl') as HTMLInputElement;
  const bodyEl = document.getElementById('body') as HTMLTextAreaElement;
  const previewEl = document.getElementById('preview') as HTMLElement;

  sponsoredEl.addEventListener('change', () => {
    sponsorFields.classList.toggle('hidden', !sponsoredEl.checked);
  });

  bodyEl.addEventListener('input', () => {
    previewEl.innerHTML = bodyEl.value.trim() 
      ? (window as any).marked.parse(bodyEl.value)
      : '<p class="text-gray-500 italic">La pr√©visualisation appara√Ætra ici...</p>';
  });

  function insertMd(before: string, after: string) {
    const start = bodyEl.selectionStart, end = bodyEl.selectionEnd;
    const text = bodyEl.value, selected = text.substring(start, end);
    bodyEl.value = text.substring(0, start) + before + selected + after + text.substring(end);
    bodyEl.focus();
    bodyEl.setSelectionRange(start + before.length, start + before.length + selected.length);
    bodyEl.dispatchEvent(new Event('input'));
  }
  (window as any).insertMd = insertMd;

  async function saveArticle(isDraft: boolean) {
    if (!titleEl.value.trim()) { alert('Titre requis'); return; }
    if (!descriptionEl.value.trim()) { alert('Description requise'); return; }
    
    const tags = tagsEl.value.split(',').map(t => t.trim()).filter(t => t);
    
    try {
      const response = await fetch('/api/articles', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          title: titleEl.value,
          description: descriptionEl.value,
          category: categoryEl.value || 'G√©n√©ral',
          tags,
          image: imageEl.value || 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=800&h=400&fit=crop',
          draft: isDraft,
          featured: featuredEl.checked,
          sponsored: sponsoredEl.checked,
          sponsorName: sponsoredEl.checked ? sponsorNameEl.value : undefined,
          sponsorUrl: sponsoredEl.checked ? sponsorUrlEl.value : undefined,
          body: bodyEl.value,
        }),
      });
      
      if (response.ok) window.location.href = '/admin/articles';
      else alert('Erreur');
    } catch { alert('Erreur'); }
  }

  document.getElementById('save-draft-btn')?.addEventListener('click', () => saveArticle(true));
  document.getElementById('publish-btn')?.addEventListener('click', () => saveArticle(false));
  
  document.addEventListener('keydown', (e) => {
    if ((e.ctrlKey || e.metaKey) && e.key === 's') { e.preventDefault(); saveArticle(true); }
  });
</script>

