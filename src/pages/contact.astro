---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact | Malmeu - Collaboration & Projets Tech"
  description="Contactez-moi pour vos projets de d√©veloppement web, IA ou SaaS. Disponible pour collaborations, freelance et conseils tech depuis l'Alg√©rie üá©üáø"
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text)] mb-4">
        Contact
      </h1>
      <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto">
        Vous avez une question, une proposition de collaboration ou simplement envie de discuter tech ? 
        N'h√©sitez pas √† me contacter !
      </p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-[var(--color-bg-secondary)] p-8 rounded-xl">
        <h2 class="text-xl font-bold text-[var(--color-text)] mb-6">Envoyez-moi un message</h2>
        <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
          <!-- Web3Forms Access Key -->
          <input type="hidden" name="access_key" value="7d147599-531d-4388-8556-25a1f306999d">
          <!-- Honeypot anti-spam -->
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
          <!-- Redirect apr√®s soumission -->
          <input type="hidden" name="redirect" value="https://malmeu.info/contact?success=true">
          <!-- Sujet de l'email -->
          <input type="hidden" name="subject" value="Nouveau message depuis malmeu.info">
          <div>
            <label for="name" class="block text-sm font-medium text-[var(--color-text)] mb-2">
              Nom
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-bg-secondary)] rounded-lg text-[var(--color-text)] focus:outline-none focus:border-[var(--color-accent)] transition-colors"
              placeholder="Votre nom"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-[var(--color-text)] mb-2">
              Email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-bg-secondary)] rounded-lg text-[var(--color-text)] focus:outline-none focus:border-[var(--color-accent)] transition-colors"
              placeholder="votre@email.com"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-[var(--color-text)] mb-2">
              Message
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-bg-secondary)] rounded-lg text-[var(--color-text)] focus:outline-none focus:border-[var(--color-accent)] transition-colors resize-none"
              placeholder="Votre message..."
            ></textarea>
          </div>
          
          <button 
            type="submit"
            class="w-full px-6 py-3 bg-[var(--color-accent)] text-[var(--color-bg)] rounded-lg font-medium hover:opacity-90 transition-opacity"
          >
            Envoyer le message
          </button>
        </form>
        
        <div id="form-status" class="mt-4 hidden">
          <p class="text-center py-3 rounded-lg"></p>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h2 class="text-xl font-bold text-[var(--color-text)] mb-6">Autres moyens de contact</h2>
          <div class="space-y-4">
            <a 
              href="mailto:malmeusofiane@gmail.com"
              class="flex items-center gap-4 p-4 bg-[var(--color-bg-secondary)] rounded-xl hover:bg-[var(--color-accent)]/10 transition-colors group"
            >
              <div class="w-12 h-12 bg-[var(--color-accent)]/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">Email</p>
                <p class="text-sm text-[var(--color-text-muted)]">malmeusofiane@gmail.com</p>
              </div>
            </a>
            
            <a 
              href="https://twitter.com/malmaboricua"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 p-4 bg-[var(--color-bg-secondary)] rounded-xl hover:bg-[var(--color-accent)]/10 transition-colors group"
            >
              <div class="w-12 h-12 bg-[var(--color-accent)]/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[var(--color-accent)]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">Twitter/X</p>
                <p class="text-sm text-[var(--color-text-muted)]">@malmaboricua</p>
              </div>
            </a>
            
            <a 
              href="https://linkedin.com/in/malmeu"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 p-4 bg-[var(--color-bg-secondary)] rounded-xl hover:bg-[var(--color-accent)]/10 transition-colors group"
            >
              <div class="w-12 h-12 bg-[var(--color-accent)]/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[var(--color-accent)]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">LinkedIn</p>
                <p class="text-sm text-[var(--color-text-muted)]">malmeu</p>
              </div>
            </a>
          </div>
        </div>

        <!-- FAQ -->
        <div>
          <h2 class="text-xl font-bold text-[var(--color-text)] mb-6">Questions fr√©quentes</h2>
          <div class="space-y-4">
            <div class="p-4 bg-[var(--color-bg-secondary)] rounded-xl">
              <h3 class="font-medium text-[var(--color-text)] mb-2">D√©lai de r√©ponse ?</h3>
              <p class="text-sm text-[var(--color-text-muted)]">Je r√©ponds g√©n√©ralement sous 24-48h.</p>
            </div>
            <div class="p-4 bg-[var(--color-bg-secondary)] rounded-xl">
              <h3 class="font-medium text-[var(--color-text)] mb-2">Disponible pour du freelance ?</h3>
              <p class="text-sm text-[var(--color-text-muted)]">Oui, selon les projets. Contactez-moi pour en discuter.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Check if redirected after successful submission
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('success') === 'true') {
    const statusDiv = document.getElementById('form-status');
    const statusText = statusDiv?.querySelector('p');
    if (statusDiv && statusText) {
      statusDiv.classList.remove('hidden');
      statusText.textContent = '‚úÖ Message envoy√© avec succ√®s ! Je vous r√©pondrai bient√¥t.';
      statusText.className = 'text-center py-3 rounded-lg bg-green-500/20 text-green-400';
    }
    // Clean URL
    window.history.replaceState({}, document.title, window.location.pathname);
  }

  // Form submission with loading state
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('button[type="submit"]');
  
  form?.addEventListener('submit', () => {
    if (submitBtn) {
      submitBtn.textContent = 'Envoi en cours...';
      submitBtn.setAttribute('disabled', 'true');
    }
  });
</script>
